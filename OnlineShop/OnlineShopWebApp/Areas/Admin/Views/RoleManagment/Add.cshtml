@model RoleVM

<form method="post">
    <div>
        <h3>Создание новой роли</h3>
    </div>

    <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

    <div class="row">
        <div class="col-3">
            <label asp-for="Name">Название</label><br />
            <input class="form-control" asp-for="Name" /><br />
            <span asp-validation-for="Name"></span>           
        </div>
    </div>
    <div>
        <button class="btn btn-outline-primary" type="submit"
                asp-area="Admin"
                asp-controller="RoleManagment"
                asp-action="Add"
                asp-route-data="@Model">
            Создать
        </button>
    </div>
</form>