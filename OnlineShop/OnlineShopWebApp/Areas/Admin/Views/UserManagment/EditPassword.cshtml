@model UserChangePasswordVM

@{
    ViewData["Title"] = "Форма администратора";
}

<form method="post">
    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="@Model.UserId" />
    <input type="hidden" asp-for="@Model.Email" />
    <div class="сol text-center">
        <div>
            <h3>Редактирование пароля</h3>
        </div>        
   
    <br />
    <div>
        <input asp-for="Password" style="width: 250px;height: 40px" class="text-center" placeholder="Пароль" aria-label="Пароль"
               aria-describedby="passwordHelp" type="password" />
        <span asp-validation-for="Password"></span>
    </div>
    <br />
    <div>
        <input asp-for="PasswordConfirm" style="width: 250px;height: 40px" class="text-center" placeholder="Подтвердите пароль" aria-label="Подтвердите пароль" aria-describedby="passwordHelp" type="password" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <br />
    <button class="btn btn-outline-primary" type="submit"
            asp-area="Admin"
            asp-controller="UserManagment"
            asp-action="ChangePassword"
            asp-route-data="@Model">
        Изменить
    </button>
    </div>
</form>




