
@model EditRightsVM

@{
    ViewData["Title"] = "Форма администратора";
}

<form method="post">
    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>    
    <div class="сol text-center">
        <input type="hidden" name="userId" value="@Model.UserId" />
        <div>
            <h3>Редактирование доступа для пользователя @Model.UserName</h3>
        </div>
        @foreach (var role in Model.AllRoles)
        {           
            <div style="align-content:end center">
                @if (Model.UserRoles.Contains(role))
                {
                    <input class="form-check-input" name="UserRoles[@role.Name]" type="checkbox" value="" checked />
                    <label class="form-check-label" for="flexCheckDefault"><h5>@role.Name</h5></label>
                }
                else
                {
                    <input class="form-check-input" name="UserRoles[@role.Name]" type="checkbox" value="" />
                    <label class="form-check-label" for="flexCheckDefault"><h5>@role.Name</h5></label>
                }               
            </div>            
        } 
        <div>
            <button type="submit" 
                asp-area="Admin"
                asp-controller="UserManagment"
                asp-action="EditRights">Изменить
            </button>
        </div>
    </div>
</form>




