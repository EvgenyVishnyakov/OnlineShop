@model List<ReviewViewModel>

@{
    var index = 1;
}
@if (Model.Count == 0)
{
    <div><h1>Отзывов пока нет. Будьте первым!</h1></div>
}

@if (Model.Count != 0)
{
    <form method="post">
        <input type="hidden" asp-for="@User.Identity.Name" />
        <div class="row">
            <div class="col-7">
                <div class="сol text-center">
                    <h4>Отзывы</h4>
                </div>
                <div class="сol text-center">
                    <a type="button" class="btn btn-outline-secondary" style="color:brown;margin-bottom:5px;"
                       asp-area=""
                       asp-controller="Review"
                       asp-action="Add"><h6>Добавить новый отзыв</h6></a>
                </div>
                <div class="table">
                    <table class="text-center">
                        <tr class="head">
                            <th scope="col"><p style="text-align:center center; margin-right:50px;margin-left:50px;"><b>№</b></p></th>
                            <th scope="col"><p style="text-align: center; margin-right:50px"><b>Пользователь</b></p></th>
                            <th scope="col"><p style="text-align: center; margin-right:50px"><b>Дата отзыва</b></p></th>
                            <th scope="col"><p style="text-align: center; margin-right:50px"><b>Продукт</b></p></th>
                            <th scope="col"><p style="text-align: center; margin-right:50px"><b>Отзыв</b></p></th>
                        </tr>
                        @foreach (var review in Model)
                        {
                            <tr class="review">
                                <th scope="row" style="margin-right:50px">@index</th>
                                <th scope="row" style="margin-right:50px">@User.Identity.Name</th>
                                <th scope="row" style="margin-right:50px">@review.CreateDate</th>
                                <th scope="row" style="margin-right:50px">@review.ProductName</th>
                                <th scope="row" style="margin-right:50px">@review.Text</th>
                            </tr>
                            index++;
                        }
                    </table>
                </div>
            </div>
        </div>
    </form>
}



<!-- service_style -->
