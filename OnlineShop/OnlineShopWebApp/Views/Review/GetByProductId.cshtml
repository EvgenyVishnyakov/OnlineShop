    body {
        font-family: Cambria,Verdana,sans-serif;
        font-size: 90%;
        color: black;
        background-color: #f8f8f8;
    }

    table {
        border-spacing: 0px
    }

    th, td {
        padding: 5px;
        border-spacing: 15px;
    }

    td {
        border-style: solid;
        border-spacing: 20px;
    }

        td a {
            border-spacing: 0px
        }

</style>

